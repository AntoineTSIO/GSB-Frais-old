{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
  <div class="container-fluid">
    <a class="navbar-brand" href="../accueil">
        <h5>GSB Frais</h5>
    </a>
    <span class="navbar-header text-center">
      <h3>Espace Visiteur</h3>
      <h7>Consulter Fiches de Frais</h7>
    </span>
    <span class="navbar-text">
      <h5>{{app.session.get('prenom')}} {{app.session.get('nom')}}</h5>
    </span>
  </div>
</nav>



<div>
    <table style="border: solid; margin-right: auto; margin-left: auto">
        <tr style="background-color: #333; color: #fff;">
            <th style="border: 1px solid #333">Visiteur</th>
            <th style="border: 1px solid #333">Mois</th>
            <th style="border: 1px solid #333">Nombre de Justificatifs</th>
            <th style="border: 1px solid #333">Montant</th>
            <th style="border: 1px solid #333">Date de la derni√®re modification</th>
            <th style="border: 1px solid #333">Etat</th>
        </tr>
        {% for uneFiche in ficheFrais %}
        <tr>
            <td style="border: 1px solid #333;text-align: center;">{{uneFiche[0]}}</td>
            <td style="border: 1px solid #333;text-align: center;">{{uneFiche[1]}}</td>
            <td style="border: 1px solid #333;text-align: center;">{{uneFiche[2]}}</td>
            <td style="border: 1px solid #333;text-align: center;">{{uneFiche[3]}}</td>
            <td style="border: 1px solid #333;text-align: center;">{{uneFiche[4]}}</td>
            <td style="border: 1px solid #333;text-align: center;">{{uneFiche[5]}}</td>
        </tr>
        {% endfor %}  
    </table>
</div>

{% endblock %}
